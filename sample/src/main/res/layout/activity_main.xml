<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#555"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.refactor.characterview.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <cn.refactor.library.CharacterView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:backgroundColor="@color/colorPrimary"
            app:shape="Circle"
            app:text="P"
            app:textColor="#fff"
            app:textSize="20sp"
            app:borderWidth="4dp"
            app:borderColor="@android:color/white"/>

        <cn.refactor.library.CharacterView
            android:id="@+id/cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>

        <cn.refactor.library.CharacterView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:backgroundColor="@color/colorAccent"
            app:shape="RoundRectangle"
            app:text="╮(╯_╰)╭"
            app:radius="12dp"
            app:textSize="20sp"
            app:textColor="#fff"
            app:textStyle="bold"
            app:borderWidth="2dp"
            app:borderColor="@android:color/white"/>

        <cn.refactor.library.CharacterView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:backgroundColor="@color/colorPrimary"
            app:shape="Rectangle"
            app:text="Rectangle"
            app:textColor="#fff"
            app:textSize="20sp"
            app:textStyle="bold_italic"
            app:borderWidth="3dp"
            app:borderColor="@android:color/white"/>

        <cn.refactor.library.CharacterView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            app:backgroundColor="@android:color/holo_blue_dark"
            app:shape="RoundRectangle"
            app:text="RoundRectangle"
            app:radius="10dp"
            app:textSize="22sp"
            app:textColor="#fff"
            app:textStyle="normal"
            app:borderColor="@android:color/white"/>

    </LinearLayout>

</RelativeLayout>
